<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>
<%= link_to 'New Post', new_post_path %>
<hr>
<% @posts.each do |post|%>
<h3><%= post.title%></h3> created at <%= friendly_date post.created_at %> by <%= post.author%>
<p><%= post.body%></p>
<p><%= link_to 'Show', post %> | <%= link_to 'Edit', edit_post_path(post) %></p>
<div style="padding-left: 20px;">
<h3>Comments</h3>
  <% if post.comments.size>0 %>
  <%= render post.comments %>
  <% else %>
    No hay comentarios.
  <% end %>
</div>
<hr>
<% end %>

